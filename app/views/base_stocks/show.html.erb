<div class="container">
	<h1><%= @base_stock.name %></h1>

	<ul class="nav nav-tabs">
		<li class="active"><a data-toggle="tab" href="#daily-chart">Daily</a></li>
		<li><a data-toggle="tab" href="#weekly-chart">Weekly</a></li>
		<li><a data-toggle="tab" href="#monthly-chart">Monthly</a></li>
	</ul>

	<div class="tab-content">
		<div id="daily-chart" class="tab-pane fade">
				<img id="stock-chart" src="http://chart.finance.yahoo.com/z?s=<%= @base_stock.ticker %>&t=1d&q=l&l=on&z=l">
		</div>

		<div id="weekly-chart" class="tab-pane fade">
				<img id="stock-chart" src="http://chart.finance.yahoo.com/z?s=<%= @base_stock.ticker %>&t=1w&q=l&l=on&z=l">
		</div>

		<div id="monthly-chart" class="tab-pane fade">
				<img id="stock-chart" src="http://chart.finance.yahoo.com/z?s=<%= @base_stock.ticker %>&t=1m&q=l&l=on&z=l">
		</div>
	</div>

	<div class="stock-show">
		<p>Ticker: <%= @base_stock.ticker %></p>
		<p>Market Price: <%= @base_stock.current_market_price %></p>
	</div>

	<div>
		<% if current_user %>
			<%= form_for @owned_stock, url: {action: "create", controller: "owned_stocks"} do |f| %>
				<div class="form-group">
					<%= hidden_field_tag(:base_stock_id, @base_stock.id) %>
					<%= f.hidden_field(:buy_price, :value => @base_stock.current_market_price) %>
				</div>
				<%= f.label :quantity, "Buy Stocks:" %>
				<div class="row">
					<div class="form-group col-sm-6">
						<%= f.number_field :quantity, :value => params[:quantity], class: "form-control" %>
					</div>
					<div class="form-group col-sm-6">
						<%= f.collection_select(:portfolio_id, @portfolios, :id, :name, {}, {:class => "form-control"}) %>
					</div>
				</div>
					<%= f.submit 'Buy', :class => 'nav-button btn btn-default' %>
			<% end %>
		<% else %>
			<h5>Sign in to start trading</h5>
		<% end %>
	</div>
</div>
