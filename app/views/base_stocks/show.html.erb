<h1><%= @base_stock.name %></h1>

<div class="stock-show">
	<p>Ticker: <%= @base_stock.ticker %></p>
	<p>Market Price: <%= @base_stock.current_market_price %></p>
	<p>Bid Price: <%= @base_stock.current_bid_price %></p>
</div>

<div class="user-stock-show">
	<p>No. of Stocks You Own: </p>
</div>

<div id="stocks-buy">
	<%= form_tag owned_stocks_path, method: :post, remote: true, id:"buy-form" do %>
		<%= label_tag :quantity, "Buy Stocks:" %>
		<%= number_field_tag :quantity, params[:quantity] %>
		<%= options_for_select(@groups.map{:name}) %>
		<%= submit_tag 'Submit', :class => 'nav-button'  %>
	<% end %>
</div>