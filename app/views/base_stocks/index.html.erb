<div class="container">
	<div id="stocks-search-bar" class="search row">
		<%= form_tag stocks_path, method: :get, remote: true, id:"stock-ticker-search", class: 'col-sm-12 form-inline' do %>
			<div class="form-group">
				<%= label_tag :ticker, "Search by Ticker:" %>
				<%= text_field_tag :ticker, params[:ticker], class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= label_tag :name, "Search by Name:" %>
				<%= text_field_tag :name, params[:name], class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= submit_tag 'Submit', :class => 'btn btn-default'  %>
			</div>
		<% end %>
	</div>

	<div id="stock-list">
		<div class="stock-info list-group">
			<%= render 'base_stock' %>
		</div>
	</div>
</div>
