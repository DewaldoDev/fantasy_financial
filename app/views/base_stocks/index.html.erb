<div class="container">
	<div id="stocks-search-bar" class="search row">
		<%= form_tag stocks_path, method: :get, remote: true, id:"stock-ticker-search", class: 'col-sm-12 form-inline' do %>
			<div class="form-group">
				<%= label_tag :ticker, "Search by Ticker:" %>
				<%= text_field_tag :ticker, params[:ticker], class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= label_tag :name, "Search by Name:" %>
				<%= text_field_tag :name, params[:name], class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="sector">Sector:
					<select class="form-control" id="sector" name="sector">
						<option value="">All</option>
						<option value="Basic Materials">Basic Materials</option>
						<option value="Conglomerates">Conglomerates</option>
						<option value="Consumer Goods">Consumer Goods</option>
						<option value="Financial">Financial</option>
						<option value="Healthcare">Healthcare</option>
						<option value="Industrial Goods">Industrial Goods</option>
						<option value="Services">Services</option>
						<option value="Technology">Technology</option>
						<option value="Utilities">Utilities</option>
					</select>
				</label>
			</div>
			<div class="form-group">
				<%= submit_tag 'Submit', :class => 'btn btn-default'  %>
			</div>
		<% end %>
	</div>

	<div id="stock-list">
		<div class="stock-info list-group">
			<%= render 'base_stock' %>
		</div>
	</div>
</div>
