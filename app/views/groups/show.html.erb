<div class="container">

	<div class="jumbotron">
		<h1><%= @group.name %></h1>
		<p>End Date: <%= @group.end_date %></p>
	</div>
	<div class="list-group">
		<h2>Players:</h2>
		<% @group.users.each do |user| %>
		  <%= link_to portfolios/"#{user.@group.portfolio.id}", class: "list-group-item" do %>
		  	<p> <%= user.username %> |
				Portfolio net worth: <%= user.portfolios.where(group_id: @group.id).take.current_value %></p>
			<% end %>
		<% end %>

	</div>
</div>